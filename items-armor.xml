<?xml version="1.0" encoding="utf-8"?>
<elements>
  <!-- Light Armor -->
  <element name="Combat Suit" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_COMBAT_SUIT">
    <supports>ID_INTERNAL_ARMOR_GROUP_LIGHT</supports>
    <description>
      <p>A basic combat suit providing minimal protection while maintaining mobility.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">50</set>
      <set name="weight" lb="8">8 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Light</set>
      <set name="armorClass">11 + Dex modifier</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_COMBAT_SUIT</set>
    </setters>
    <rules>
      <stat name="ac:armored:armor" value="11" />
    </rules>
  </element>
  
  <element name="Fiber Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_FIBER_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_LIGHT</supports>
    <description>
      <p>Armor made from reinforced fiber materials offering better protection than standard combat suits.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">100</set>
      <set name="weight" lb="10">10 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Light</set>
      <set name="armorClass">12 + Dex modifier</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_FIBER_ARMOR</set>
    </setters>
    <rules>
      <stat name="ac:armored:armor" value="12" />
    </rules>
  </element>
  
  <element name="Duranium Combat Suit" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_DURANIUM_COMBAT_SUIT">
    <supports>ID_INTERNAL_ARMOR_GROUP_LIGHT</supports>
    <description>
      <p>A combat suit reinforced with duranium plates, providing excellent protection but making stealth difficult.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">200</set>
      <set name="weight" lb="15">15 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Light</set>
      <set name="armorClass">13 + Dex modifier</set>
      <set name="stealth">Disadvantage</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_DURANIUM_COMBAT_SUIT</set>
    </setters>
    <rules>
      <grant type="Grants" id="ID_INTERNAL_GRANTS_STEALTH_DISADVANTAGE" />
      <stat name="ac:armored:armor" value="13" />
    </rules>
  </element>
  
  <!-- Medium Armor -->
  <element name="Mesh Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_MESH_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_MEDIUM</supports>
    <description>
      <p>Armor constructed from interlocking mesh plates, providing solid protection while allowing reasonable mobility.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">150</set>
      <set name="weight" lb="20">20 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Medium</set>
      <set name="armorClass">13 + Dex modifier (max 2)</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_MESH_ARMOR</set>
    </setters>
    <rules>
      <stat name="ac:armored:armor" value="13" />
    </rules>
  </element>
  
  <element name="Weave Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_WEAVE_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_MEDIUM</supports>
    <description>
