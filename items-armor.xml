  </element>
  
  <!-- Heavy Armor -->
  <element name="Battle Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_BATTLE_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_HEAVY</supports>
    <description>
      <p>Heavy military-grade armor designed for frontline combat. Provides resistance to kinetic damage.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">600</set>
      <set name="weight" lb="50">50 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Heavy</set>
      <set name="armorClass">16</set>
      <set name="stealth">Disadvantage</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_BATTLE_ARMOR</set>
    </setters>
    <rules>
      <grant type="Grants" id="ID_INTERNAL_GRANTS_STEALTH_DISADVANTAGE" />
      <stat name="ac:armored:armor" value="16" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_KINETIC" />
    </rules>
  </element>
  
