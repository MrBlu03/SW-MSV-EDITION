  <!-- Shields -->
  <element name="Physical Shield" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_PHYSICAL_SHIELD">
    <supports>ID_INTERNAL_ARMOR_GROUP_SHIELD</supports>
    <description>
      <p>A physical shield that provides +2 AC when wielded.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">20</set>
      <set name="weight" lb="6">6 lb.</set>
      <set name="slot">offhand</set>
      <set name="armor">Shield</set>
      <set name="armorClass">+2</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_PHYSICAL_SHIELD</set>
    </setters>
    <rules>
      <stat name="ac:shield" value="2" />
    </rules>
  </element>
  
  <element name="Small Shield Generator" type="Item" source="SW-MSV-Edition" id="ID_ITEM_SMALL_SHIELD_GENERATOR">
    <description>
      <p>A portable shield generator that creates a protective energy barrier. Once per long rest, you can activate it to gain 10 temporary hit points as a bonus action.</p>
    </description>
    <setters>
      <set name="category">Equipment</set>
      <set name="cost" currency="gp">500</set>
      <set name="weight" lb="3">3 lb.</set>
      <set name="slot">body</set>
    </setters>
    <rules>
      <grant type="Grants" id="ID_INTERNAL_GRANTS_SHIELD_GENERATOR_SMALL" />
    </rules>
  </element>
  
  <element name="Medium Shield Generator" type="Item" source="SW-MSV-Edition" id="ID_ITEM_MEDIUM_SHIELD_GENERATOR">
    <description>
      <p>A more powerful shield generator that creates a stronger protective barrier. Once per long rest, you can activate it to gain 20 temporary hit points as a bonus action.</p>
    </description>
    <setters>
      <set name="category">Equipment</set>
      <set name="cost" currency="gp">1000</set>
      <set name="weight" lb="5">5 lb.</set>
      <set name="slot">body</set>
    </setters>
    <rules>
      <grant type="Grants" id="ID_INTERNAL_GRANTS_SHIELD_GENERATOR_MEDIUM" />
    </rules>
  </element>
  
  <element name="Large Shield Generator" type="Item" source="SW-MSV-Edition" id="ID_ITEM_LARGE_SHIELD_GENERATOR">
