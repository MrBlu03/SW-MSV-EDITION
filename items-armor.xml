      <set name="cost" currency="gp">2000</set>
      <set name="weight" lb="8">8 lb.</set>
      <set name="slot">body</set>
    </setters>
    <rules>
      <grant type="Grants" id="ID_INTERNAL_GRANTS_SHIELD_GENERATOR_LARGE" />
    </rules>
  </element>
  
  <element name="Energy Shield" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_ENERGY_SHIELD">
    <supports>ID_INTERNAL_ARMOR_GROUP_SHIELD</supports>
    <description>
      <p>An energy-based shield that provides +3 AC and halves lightning damage taken.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">1500</set>
      <set name="weight" lb="4">4 lb.</set>
      <set name="slot">offhand</set>
      <set name="armor">Shield</set>
      <set name="armorClass">+3</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_ENERGY_SHIELD</set>
    </setters>
    <rules>
      <stat name="ac:shield" value="3" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_LIGHTNING" />
    </rules>
  </element>
</elements>
