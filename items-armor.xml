    </rules>
  </element>
  
  <element name="Beskar Weave Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_BESKAR_WEAVE_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_MEDIUM</supports>
    <description>
      <p>Armor woven with beskar fibers, providing exceptional protection. When an enemy rolls maximum damage on an attack, they must reroll and use the new result.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">800</set>
      <set name="weight" lb="30">30 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Medium</set>
      <set name="armorClass">14 + Dex modifier (max 2)</set>
