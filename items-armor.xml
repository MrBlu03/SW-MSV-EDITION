    </setters>
    <rules>
      <stat name="ac:armored:armor" value="14" />
    </rules>
  </element>
  
  <element name="Composite Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_COMPOSITE_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_MEDIUM</supports>
    <description>
      <p>Heavy medium armor made from layered composite materials. Provides excellent protection but makes stealth difficult.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">500</set>
      <set name="weight" lb="35">35 lb.</set>
      <set name="slot">body</set>
      <set name="armor">Medium</set>
      <set name="armorClass">15 + Dex modifier (max 2)</set>
      <set name="stealth">Disadvantage</set>
      <set name="proficiency">ID_PROFICIENCY_ARMOR_PROFICIENCY_COMPOSITE_ARMOR</set>
    </setters>
    <rules>
