  <element name="Durasteel Armor" type="Armor" source="SW-MSV-Edition" id="ID_ARMOR_DURASTEEL_ARMOR">
    <supports>ID_INTERNAL_ARMOR_GROUP_HEAVY</supports>
    <description>
      <p>The heaviest and most protective armor available, made from durasteel plates. Provides resistance to kinetic damage.</p>
    </description>
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">1500</set>
